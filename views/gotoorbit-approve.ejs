<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>AI Action Approval - BigO Board</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: #0f172a;
      min-height: 100vh;
    }
    .fade-in {
      animation: fade-in 0.3s ease-out;
    }
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body class="flex items-center justify-center px-4">
  <div class="max-w-3xl w-full bg-white/95 rounded-2xl shadow-2xl p-8 fade-in">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-2xl font-bold text-slate-900">AI Action Request</h1>
        <p class="text-sm text-slate-500 mt-1">
          Review what the AI wants to do before approving or rejecting.
        </p>
      </div>
      <% if (user) { %>
        <div class="text-right text-sm text-slate-500">
          <div class="font-medium text-slate-700">Signed in as</div>
          <div><%= user.name %> (<%= user.email %>)</div>
        </div>
      <% } %>
    </div>

    <!-- Action Summary -->
    <div class="mb-4">
      <h2 class="text-sm font-semibold text-slate-700 mb-2">Project</h2>
      <div class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-50 text-indigo-700 text-xs font-medium">
        Project ID: <span class="ml-1 font-mono"><%= project_id %></span>
      </div>
      <% if (message_id) { %>
      <div class="mt-2 text-xs text-slate-500">
        Message ID: <span class="font-mono"><%= message_id %></span>
      </div>
      <% } %>
    </div>

    <!-- Macro string display -->
    <div class="mb-6">
      <h2 class="text-sm font-semibold text-slate-700 mb-2">Proposed AI Action</h2>
      <div class="bg-slate-900 text-slate-100 rounded-xl p-4 text-sm overflow-x-auto">
        <pre class="whitespace-pre-wrap break-words"><%= macro_string %></pre>
      </div>
      <p class="text-xs text-slate-500 mt-2">
        This is the exact macro the AI wants to execute via gotoOrbit.
      </p>
    </div>

    <!-- Status / result -->
    <div id="statusBox" class="hidden mb-4">
      <div id="statusInner" class="rounded-lg border px-4 py-3 text-sm"></div>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mt-6">
      <div class="text-xs text-slate-500">
        By approving, you allow this macro to be executed against your connected systems.
      </div>
      <div class="flex gap-3 justify-end">
        <button
          id="rejectBtn"
          class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50 disabled:opacity-60 disabled:cursor-not-allowed"
        >
          ✋ Reject
        </button>
        <button
          id="approveBtn"
          class="inline-flex items-center px-4 py-2 rounded-lg bg-emerald-600 text-sm font-semibold text-white hover:bg-emerald-700 shadow-sm disabled:opacity-60 disabled:cursor-not-allowed"
        >
          ✅ Approve & Execute
        </button>
      </div>
    </div>

    <!-- Hidden data for JS -->
    <input type="hidden" id="macro_string" value="<%- macro_string.replace(/"/g, '&quot;') %>" />
    <input type="hidden" id="project_id" value="<%= project_id %>" />
    <input type="hidden" id="message_id" value="<%= message_id %>" />
  </div>

  <script>
    const approveBtn = document.getElementById('approveBtn');
    const rejectBtn = document.getElementById('rejectBtn');
    const statusBox = document.getElementById('statusBox');
    const statusInner = document.getElementById('statusInner');

    const macro_string = document.getElementById('macro_string').value;
    const project_id = document.getElementById('project_id').value;
    const message_id = document.getElementById('message_id').value;

    function setLoading(isLoading) {
      approveBtn.disabled = isLoading;
      rejectBtn.disabled = isLoading;
      if (isLoading) {
        approveBtn.textContent = 'Working...';
        rejectBtn.textContent = 'Working...';
      } else {
        approveBtn.textContent = '✅ Approve & Execute';
        rejectBtn.textContent = '✋ Reject';
      }
    }

    function showStatus(type, title, message, raw) {
      statusBox.classList.remove('hidden');
      const baseClasses = 'rounded-lg border px-4 py-3 text-sm';
      if (type === 'success') {
        statusInner.className = baseClasses + ' bg-emerald-50 border-emerald-200 text-emerald-800';
      } else if (type === 'error') {
        statusInner.className = baseClasses + ' bg-rose-50 border-rose-200 text-rose-800';
      } else {
        statusInner.className = baseClasses + ' bg-amber-50 border-amber-200 text-amber-800';
      }

      statusInner.innerHTML = `
        <div class="font-semibold mb-1">${title}</div>
        <div class="text-xs mb-2">${message || ''}</div>
        ${raw ? `<pre class="mt-1 text-[11px] whitespace-pre-wrap break-words bg-white/40 rounded-md p-2">${raw}</pre>` : ''}
      `;
    }

    async function callApi(endpoint) {
      try {
        setLoading(true);
        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({
            macro_string,
            project_id,
            message_id: message_id || undefined
          })
        });

        const data = await res.json().catch(() => ({ status: 'error', raw: { message: 'Invalid JSON response' } }));

        if (!res.ok || data.status === 'error') {
          showStatus(
            'error',
            'Operation failed',
            data.raw?.message || 'Something went wrong while talking to gotoOrbit.',
            typeof data.raw === 'string' ? data.raw : JSON.stringify(data.raw || {}, null, 2)
          );
        } else if (data.status === 'rejected') {
          showStatus(
            'warn',
            'Macro rejected',
            'The macro was rejected successfully.',
            typeof data.raw === 'string' ? data.raw : JSON.stringify(data.raw || {}, null, 2)
          );
        } else {
          showStatus(
            'success',
            'Macro executed successfully',
            'The macro was approved and executed.',
            typeof data.raw === 'string' ? data.raw : JSON.stringify(data.raw || {}, null, 2)
          );
        }
      } catch (err) {
        console.error('Approval form error:', err);
        showStatus('error', 'Network / Server error', err.message || 'Unknown error');
      } finally {
        setLoading(false);
      }
    }

    approveBtn.addEventListener('click', () => {
      callApi('/gotoorbit/api/approve-ai');
    });

    rejectBtn.addEventListener('click', () => {
      callApi('/gotoorbit/api/reject-ai');
    });
  </script>
</body>
</html>
